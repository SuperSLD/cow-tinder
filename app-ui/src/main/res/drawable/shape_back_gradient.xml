<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:layout_height="wrap_content">
            <solid android:color="#23323F" />
        </shape>
    </item>

    <item>

        <shape>

            <gradient
                android:type="radial"
                android:gradientRadius="200%"
                android:startColor="#5060CA"
                android:endColor="@android:color/transparent"
                android:centerX="-0.2"
                android:centerY="2"/>

        </shape>

    </item>

    <item>

        <shape>

            <gradient
                android:type="radial"
                android:gradientRadius="200%"
                android:startColor="#93DA5F"
                android:endColor="@android:color/transparent"
                android:centerX="1.2"
                android:centerY="2"/>

        </shape>

    </item>

</layer-list>