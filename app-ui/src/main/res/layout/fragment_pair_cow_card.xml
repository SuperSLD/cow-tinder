<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:layout_margin="24dp"
        android:foregroundTint="#3F5C47"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextBlack"
                android:fontFamily="@font/roboto_regular"
                android:textSize="24sp"
                android:text="@string/pair_cow_card_title"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/colorBack"
                app:cardCornerRadius="0dp"
                app:strokeColor="@color/colorBorder"
                app:strokeWidth="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cow_card_number"
                        android:textColor="@color/colorTextSecondary"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="18sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/cowNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextBlack"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="36sp"
                        tools:text="№000000"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/colorBack"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@color/colorBorder"
                    app:strokeWidth="1dp"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cow_card_gender"
                            android:textColor="@color/colorTextSecondary"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="18sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/cowGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextBlack"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="20sp"
                            tools:text="Сумка"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/colorBack"
                    app:cardCornerRadius="0dp"
                    app:strokeColor="@color/colorBorder"
                    app:strokeWidth="1dp"
                    android:layout_marginStart="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cow_card_poroda"
                            android:textColor="@color/colorTextSecondary"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="18sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/cowPoroda"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextBlack"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="20sp"
                            tools:text="Сумка"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_back_gradient"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#695F7291"
                        app:cardCornerRadius="0dp"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cow_card_weight"
                                android:textColor="@color/colorTextSecondary"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="18sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/cowWeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextWhite"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="20sp"
                                tools:text="Сумка"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#695F7291"
                        app:cardCornerRadius="0dp"
                        android:layout_marginStart="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cow_card_milk"
                                android:textColor="@color/colorTextSecondary"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="18sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/cowMilk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextWhite"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="20sp"
                                tools:text="Сумка"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#695F7291"
                        app:cardCornerRadius="0dp"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cow_card_health"
                                android:textColor="@color/colorTextSecondary"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="18sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/cowHealth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextWhite"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="20sp"
                                tools:text="Сумка"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#695F7291"
                        app:cardCornerRadius="0dp"
                        android:layout_marginStart="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cow_card_fertility"
                                android:textColor="@color/colorTextSecondary"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="18sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/cowFertility"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextWhite"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="20sp"
                                tools:text="Сумка"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/colorBack"
                app:cardCornerRadius="0dp"
                app:strokeColor="@color/colorBorder"
                app:strokeWidth="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cow_card_birthday"
                        android:textColor="@color/colorTextSecondary"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="18sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/cowBirthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextBlack"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="20sp"
                        tools:text="№000000"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextSecondary"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="@string/pair_cow_card_result"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/big_arrow"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_back_gradient"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#695F7291"
                        app:cardCornerRadius="0dp"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cow_card_weight"
                                android:textColor="@color/colorTextSecondary"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="18sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/cowWeight2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextWhite"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="20sp"
                                tools:text="Сумка"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#695F7291"
                        app:cardCornerRadius="0dp"
                        android:layout_marginStart="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cow_card_milk"
                                android:textColor="@color/colorTextSecondary"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="18sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/cowMilk2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextWhite"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="20sp"
                                tools:text="Сумка"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#695F7291"
                        app:cardCornerRadius="0dp"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cow_card_health"
                                android:textColor="@color/colorTextSecondary"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="18sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/cowHealth2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextWhite"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="20sp"
                                tools:text="Сумка"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#695F7291"
                        app:cardCornerRadius="0dp"
                        android:layout_marginStart="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cow_card_fertility"
                                android:textColor="@color/colorTextSecondary"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="18sp"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/cowFertility2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextWhite"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="20sp"
                                tools:text="Сумка"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/actionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ButtonSolid"
                android:text="@string/pair_cow_card_button"
                android:layout_margin="16dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>